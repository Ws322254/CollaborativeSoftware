<Window x:Class="CollaborativeSoftware.TwoFactorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Two-Factor Authentication"
        Height="300"
        Width="400"
        WindowStartupLocation="CenterScreen"
        Background="#0f0f1e"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        FontFamily="Segoe UI">

    <Grid>
        <StackPanel VerticalAlignment="Center" Width="280">
            <TextBlock Text="🔒" FontSize="40" TextAlignment="Center" Foreground="#FFFFF500" />

            <TextBlock Text="Enter 2FA Code" 
                       Foreground="#FF8B3DFF" FontSize="28" 
                       Margin="0,0,0,15" TextAlignment="Center" FontWeight="Bold"/>

            <TextBox x:Name="CodeBox" Height="40" FontSize="18" BorderBrush="#FF8B3DFF" CaretBrush="#FF8B3DFF" Background="#FF2D2D44" Foreground="White" TextChanged="CodeBox_TextChanged" />

            <Button Content="Verify Code" Height="45"
                    Margin="0,20,0,0"
                    Click="VerifyButton_Click" Foreground="White" Background="#FF8B3DFF" BorderBrush="#FF8B3DFF"/>
        </StackPanel>
    </Grid>
</Window>

