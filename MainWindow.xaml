<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quiz Platform" Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#1a1a2e">
    <Grid>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20">
        <TextBlock Text="🎓 Quiz Platform" FontSize="48" FontWeight="Bold" Foreground="#8b3dff" TextAlignment="Center" Margin="0,0,0,30"/>
   
       <TextBlock Text="Revolutionizing Learning Through Interactive Quizzes" FontSize="18" Foreground="#ffffff" TextAlignment="Center" Margin="0,0,0,50"/>
      
     <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,30">
                <Button Content="Login" Click="LoginButton_Click" Width="120" Height="50" Margin="10" Background="#8b3dff" Foreground="White" FontSize="16" Cursor="Hand"/>
    <Button Content="Register" Click="RegisterButton_Click" Width="120" Height="50" Margin="10" Background="#00d4ff" Foreground="White" FontSize="16" Cursor="Hand"/>
         </StackPanel>
        
  <TextBlock Text="Secure • Fast • Engaging" FontSize="14" Foreground="#888888" TextAlignment="Center" Margin="0,50,0,0"/>
    </StackPanel>
    </Grid>
</Window>
