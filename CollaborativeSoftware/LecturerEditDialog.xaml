<Window x:Class="CollaborativeSoftware.LecturerEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Lecturer Account" Height="400" Width="500"
        WindowStartupLocation="CenterOwner"
        Background="#1a1a2e"
        Foreground="White"
        ResizeMode="NoResize">
    <Grid Margin="30">
        <StackPanel VerticalAlignment="Top">
            <TextBlock Text="Edit Lecturer Account" FontSize="20" FontWeight="Bold" Margin="0,0,0,30" Foreground="White"/>
            
            <StackPanel Margin="0,0,0,20">
                <TextBlock Text="First Name:" Margin="0,0,0,8" Foreground="White" FontSize="14" FontWeight="SemiBold"/>
                <TextBox x:Name="FirstNameBox" Height="40" Padding="12,10" 
                        Background="#2d2d44" BorderBrush="#5d5d7d" Foreground="White" FontSize="14" BorderThickness="2"/>
            </StackPanel>
            
            <StackPanel Margin="0,0,0,20">
                <TextBlock Text="Last Name:" Margin="0,0,0,8" Foreground="White" FontSize="14" FontWeight="SemiBold"/>
                <TextBox x:Name="LastNameBox" Height="40" Padding="12,10" 
                        Background="#2d2d44" BorderBrush="#5d5d7d" Foreground="White" FontSize="14" BorderThickness="2"/>
            </StackPanel>
            
            <StackPanel Margin="0,0,0,30">
                <TextBlock Text="Email:" Margin="0,0,0,8" Foreground="White" FontSize="14" FontWeight="SemiBold"/>
                <TextBox x:Name="EmailBox" Height="40" Padding="12,10" 
                        Background="#2d2d44" BorderBrush="#5d5d7d" Foreground="White" FontSize="14" BorderThickness="2"/>
            </StackPanel>
            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button x:Name="CancelButton" Content="Cancel" Width="120" Height="42" 
                       Background="#4d4d6d" Foreground="White" BorderThickness="2" BorderBrush="#6d6d8d"
                       Margin="0,0,15,0" Click="CancelButton_Click" FontSize="14" FontWeight="Bold"
                       Cursor="Hand" Padding="10"/>
                <Button x:Name="SaveButton" Content="Save" Width="120" Height="42" 
                       Background="#8b3dff" Foreground="White" BorderThickness="2" BorderBrush="#ab5dff"
                       Click="SaveButton_Click" FontSize="14" FontWeight="Bold" Cursor="Hand" Padding="10"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>

