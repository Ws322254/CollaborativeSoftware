<Window x:Class="CollaborativeSoftware.MySqlQuizWindow"
     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quiz Platform - Take Test" Height="750" Width="950"
        WindowStartupLocation="CenterScreen"
        Background="#1a1a2e"
        MinHeight="700" MinWidth="800">

    <Window.Resources>
     <!-- Button Styles -->
        <Style x:Key="ActionButton" TargetType="Button">
     <Setter Property="Background" Value="#8b3dff"/>
            <Setter Property="Foreground" Value="White"/>
  <Setter Property="BorderThickness" Value="0"/>
     <Setter Property="FontSize" Value="14"/>
     <Setter Property="FontWeight" Value="SemiBold"/>
     <Setter Property="Cursor" Value="Hand"/>
          <Setter Property="Padding" Value="20,12"/>
 <Setter Property="Template">
   <Setter.Value>
         <ControlTemplate TargetType="Button">
   <Border Background="{TemplateBinding Background}" CornerRadius="5" Padding="{TemplateBinding Padding}">
  <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>
      <ControlTemplate.Triggers>
       <Trigger Property="IsMouseOver" Value="True">
         <Setter Property="Background" Value="#9b4dff"/>
    </Trigger>
           <Trigger Property="IsEnabled" Value="False">
    <Setter Property="Background" Value="#4d4d6d"/>
        <Setter Property="Foreground" Value="#888888"/>
      </Trigger>
       </ControlTemplate.Triggers>
        </ControlTemplate>
         </Setter.Value>
            </Setter>
        </Style>

     <Style x:Key="SuccessButton" TargetType="Button" BasedOn="{StaticResource ActionButton}">
 <Setter Property="Background" Value="#28a745"/>
            <Style.Triggers>
    <Trigger Property="IsMouseOver" Value="True">
<Setter Property="Background" Value="#34ce57"/>
              </Trigger>
     </Style.Triggers>
        </Style>

        <Style x:Key="NavButton" TargetType="Button" BasedOn="{StaticResource ActionButton}">
      <Setter Property="Background" Value="#4d4d6d"/>
  <Style.Triggers>
 <Trigger Property="IsMouseOver" Value="True">
<Setter Property="Background" Value="#5d5d7d"/>
       </Trigger>
       </Style.Triggers>
        </Style>

        <!-- Compact RadioButton Style for Answers -->
        <Style x:Key="AnswerRadioButton" TargetType="RadioButton">
   <Setter Property="Foreground" Value="White"/>
       <Setter Property="FontSize" Value="15"/>
            <Setter Property="Margin" Value="0,4"/>
   <Setter Property="Cursor" Value="Hand"/>
 <Setter Property="Template">
                <Setter.Value>
      <ControlTemplate TargetType="RadioButton">
            <Border x:Name="border" Background="#2d2d44" CornerRadius="8" Padding="12,10" Margin="0,3">
        <StackPanel Orientation="Horizontal">
     <Border x:Name="radioCircle" Width="22" Height="22" CornerRadius="11" 
    BorderBrush="#8b3dff" BorderThickness="2" Margin="0,0,12,0">
          <Ellipse x:Name="radioFill" Width="10" Height="10" Fill="#8b3dff" Visibility="Collapsed"/>
   </Border>
  <ContentPresenter VerticalAlignment="Center"/>
   </StackPanel>
 </Border>
          <ControlTemplate.Triggers>
<Trigger Property="IsMouseOver" Value="True">
         <Setter TargetName="border" Property="Background" Value="#3d3d54"/>
</Trigger>
     <Trigger Property="IsChecked" Value="True">
        <Setter TargetName="radioFill" Property="Visibility" Value="Visible"/>
              <Setter TargetName="border" Property="Background" Value="#3d3d54"/>
           <Setter TargetName="border" Property="BorderBrush" Value="#8b3dff"/>
<Setter TargetName="border" Property="BorderThickness" Value="2"/>
              </Trigger>
            </ControlTemplate.Triggers>
               </ControlTemplate>
    </Setter.Value>
      </Setter>
      </Style>
    </Window.Resources>

    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header - More compact -->
        <Border Grid.Row="0" Background="#2d2d44" CornerRadius="10" Padding="18" Margin="0,0,0,15">
            <Grid>
           <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*"/>
           <ColumnDefinition Width="Auto"/>
     </Grid.ColumnDefinitions>
      <StackPanel>
  <TextBlock x:Name="TestNameBlock" Text="Test Name" FontSize="22" FontWeight="Bold" Foreground="White"/>
            <TextBlock x:Name="SubjectBlock" Text="Subject" FontSize="13" Foreground="#888888" Margin="0,3,0,0"/>
      </StackPanel>
     <StackPanel Grid.Column="1" HorizontalAlignment="Right">
           <TextBlock x:Name="QuestionCounterBlock" Text="Question 1 of 10" FontSize="17" FontWeight="Bold" 
     Foreground="#8b3dff" HorizontalAlignment="Right"/>
    <TextBlock x:Name="TimerBlock" Text="" FontSize="13" Foreground="#ffc107" 
    HorizontalAlignment="Right" Margin="0,3,0,0"/>
     </StackPanel>
</Grid>
        </Border>

        <!-- Progress Bar - Smaller -->
        <Border Grid.Row="1" Background="#1a1a2e" CornerRadius="4" Height="8" Margin="0,0,0,15">
            <Border x:Name="ProgressFill" Background="#8b3dff" CornerRadius="4" HorizontalAlignment="Left" Width="0"/>
        </Border>

  <!-- Question Area - No ScrollViewer, compact layout -->
        <Border Grid.Row="2" Background="#2d2d44" CornerRadius="10" Padding="20">
      <Grid>
      <Grid.RowDefinitions>
 <RowDefinition Height="Auto"/>
 <RowDefinition Height="*"/>
   </Grid.RowDefinitions>
      
    <!-- Question Text - Limited height -->
            <TextBlock x:Name="QuestionTextBlock" Grid.Row="0"
     Text="Question text goes here..." 
      FontSize="18" FontWeight="SemiBold" Foreground="White" 
    TextWrapping="Wrap" Margin="0,0,0,15"
         MaxHeight="100"/>

        <!-- Answer Options - Takes remaining space -->
      <StackPanel x:Name="AnswerOptionsPanel" Grid.Row="1" VerticalAlignment="Top">
         <RadioButton x:Name="OptionA" Style="{StaticResource AnswerRadioButton}" 
         GroupName="Answers" Content="Option A"/>
       <RadioButton x:Name="OptionB" Style="{StaticResource AnswerRadioButton}" 
            GroupName="Answers" Content="Option B"/>
         <RadioButton x:Name="OptionC" Style="{StaticResource AnswerRadioButton}" 
      GroupName="Answers" Content="Option C"/>
        <RadioButton x:Name="OptionD" Style="{StaticResource AnswerRadioButton}" 
     GroupName="Answers" Content="Option D"/>
       </StackPanel>
      </Grid>
</Border>

     <!-- Navigation Buttons -->
  <Grid Grid.Row="3" Margin="0,15,0,0">
 <Grid.ColumnDefinitions>
    <ColumnDefinition Width="*"/>
 <ColumnDefinition Width="Auto"/>
       <ColumnDefinition Width="*"/>
    </Grid.ColumnDefinitions>

    <Button x:Name="PreviousButton" Content="Previous" Style="{StaticResource NavButton}" 
       Click="PreviousButton_Click" HorizontalAlignment="Left" Width="120"/>
        
 <StackPanel Grid.Column="1" Orientation="Horizontal">
 <TextBlock x:Name="AnswerStatusBlock" Text="" FontSize="14" Foreground="#888888" 
   VerticalAlignment="Center" Margin="0,0,20,0"/>
            </StackPanel>

        <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
    <Button x:Name="NextButton" Content="Next" Style="{StaticResource ActionButton}" 
     Click="NextButton_Click" Width="120" Margin="0,0,10,0"/>
      <Button x:Name="SubmitButton" Content="Submit Test" Style="{StaticResource SuccessButton}" 
      Click="SubmitButton_Click" Width="140" Visibility="Collapsed"/>
     </StackPanel>
    </Grid>
    </Grid>
</Window>
