<Window x:Class="WpfApp2.LeaderboardWindow"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quizelyangs - Leaderboard" Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
 Background="#1a1a2e"
        Loaded="Window_Loaded">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="20">
 <TextBlock Text="?? Leaderboard - Top Performers" FontSize="32" FontWeight="Bold" Foreground="#8b3dff" Margin="0,0,0,20"/>
      
 <!-- Quiz Selection -->
  <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
 <TextBlock Text="Select Quiz: " Foreground="White" VerticalAlignment="Center" FontSize="14" Margin="0,0,10,0"/>
      <ComboBox x:Name="QuizComboBox" Width="400" Height="35" Background="#2d2d44" Foreground="White" 
    SelectionChanged="QuizComboBox_SelectionChanged" Padding="10"/>
     </StackPanel>

   <!-- Leaderboard Table -->
 <TextBlock Text="Top 5 Students" FontSize="18" FontWeight="Bold" Foreground="White" Margin="0,0,0,10"/>
    <DataGrid x:Name="LeaderboardDataGrid" Background="#2d2d44" Foreground="White" BorderBrush="#555555" 
    BorderThickness="1" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True" Height="350">
   <DataGrid.Columns>
 <DataGridTextColumn Header="Rank" Binding="{Binding Rank}" Width="80"/>
       <DataGridTextColumn Header="Student Name" Binding="{Binding StudentName}" Width="250"/>
   <DataGridTextColumn Header="Highest Score" Binding="{Binding HighestScore, StringFormat='0%'}" Width="150"/>
 <DataGridTextColumn Header="Total Points" Binding="{Binding TotalPoints}" Width="150"/>
        </DataGrid.Columns>
     </DataGrid>

   <!-- Navigation Buttons -->
   <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
  <Button Content="Back" Click="BackButton_Click" Width="120" Height="40" Background="#8b3dff" Foreground="White" FontSize="14" Cursor="Hand" Margin="10"/>
       </StackPanel>
  </StackPanel>
    </Grid>
</Window>
