<Window x:Class="CollaborativeSoftware.RegisterWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quiz Platform - Register" Height="600" Width="500"
        WindowStartupLocation="CenterScreen"
     Background="#1a1a2e">
    <Grid>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center" Width="350" MaxHeight="500">
          <TextBlock Text="Student Registration" FontSize="32" FontWeight="Bold" Foreground="#8b3dff" TextAlignment="Center" Margin="0,0,0,20"/>
      
          <TextBlock Text="First Name" Foreground="White" Margin="0,0,0,5" FontSize="12"/>
            <TextBox x:Name="FirstNameTextBox" Height="35" Padding="10" FontSize="12" Background="#2d2d44" Foreground="White" Margin="0,0,0,10"/>
      
       <TextBlock Text="Last Name" Foreground="White" Margin="0,0,0,5" FontSize="12"/>
            <TextBox x:Name="LastNameTextBox" Height="35" Padding="10" FontSize="12" Background="#2d2d44" Foreground="White" Margin="0,0,0,10"/>
        
            <TextBlock Text="Email" Foreground="White" Margin="0,0,0,5" FontSize="12"/>
  <TextBox x:Name="EmailTextBox" Height="35" Padding="10" FontSize="12" Background="#2d2d44" Foreground="White" Margin="0,0,0,10"/>
      
  <TextBlock Text="Password" Foreground="White" Margin="0,0,0,5" FontSize="12"/>
      <PasswordBox x:Name="PasswordBox" Height="35" Padding="10" FontSize="12" Background="#2d2d44" Foreground="White" Margin="0,0,0,10"/>
   
     <Button Content="Create Account" Click="RegisterButton_Click" Height="45" Background="#8b3dff" Foreground="White" FontSize="16" Cursor="Hand" Margin="0,10,0,10"/>
        
            <TextBlock TextAlignment="Center" Foreground="#888888">
             <Run Text="Already have an account? "/>
      <Hyperlink Click="LoginLink_Click" Foreground="#00d4ff">Login</Hyperlink>
 </TextBlock>
  </StackPanel>
    </Grid>
</Window>
