<Window x:Class="WpfApp2.RoleSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
     Title="Quizelyangs - Select Role" 
        Height="700" 
        Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#0f0f1e"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
  FontFamily="Segoe UI">
    
    <Window.Resources>
        <!-- ComboBox Dropdown Style -->
      <Style x:Key="ComboBoxStyle" TargetType="ComboBox">
        <Setter Property="Foreground" Value="White"/>
    <Setter Property="Background" Value="#2d2d44"/>
            <Setter Property="BorderBrush" Value="#8b3dff"/>
        </Style>

        <!-- ComboBoxItem Style for Dropdown -->
    <Style TargetType="ComboBoxItem">
          <Setter Property="Background" Value="#1a1a2e"/>
        <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10,8"/>
   <Setter Property="Template">
     <Setter.Value>
   <ControlTemplate TargetType="ComboBoxItem">
            <Border Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
        <ContentPresenter/>
  </Border>
     <ControlTemplate.Triggers>
         <Trigger Property="IsHighlighted" Value="True">
      <Setter Property="Background" Value="#8b3dff"/>
</Trigger>
           <Trigger Property="IsSelected" Value="True">
 <Setter Property="Background" Value="#8b3dff"/>
       </Trigger>
              </ControlTemplate.Triggers>
   </ControlTemplate>
        </Setter.Value>
      </Setter>
     </Style>

        <!-- Button Styles -->
<Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#8b3dff"/>
   <Setter Property="Foreground" Value="White"/>
  <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="25,12"/>
        <Setter Property="BorderThickness" Value="0"/>
  <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
    <Setter.Value>
  <ControlTemplate TargetType="Button">
                  <Border Background="{TemplateBinding Background}" 
   CornerRadius="8"
         Padding="{TemplateBinding Padding}">
 <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
     </Border>
    <ControlTemplate.Triggers>
          <Trigger Property="IsMouseOver" Value="True">
         <Setter Property="Background" Value="#a855ff"/>
            </Trigger>
       <Trigger Property="IsPressed" Value="True">
           <Setter Property="Background" Value="#7c2d85"/>
       </Trigger>
      </ControlTemplate.Triggers>
   </ControlTemplate>
         </Setter.Value>
      </Setter>
        </Style>
        
        <!-- Cancel Button Style -->
        <Style x:Key="CancelButton" TargetType="Button">
          <Setter Property="Background" Value="#3a3a52"/>
            <Setter Property="Foreground" Value="White"/>
   <Setter Property="FontSize" Value="14"/>
  <Setter Property="FontWeight" Value="SemiBold"/>
       <Setter Property="Padding" Value="25,12"/>
         <Setter Property="BorderThickness" Value="0"/>
          <Setter Property="Cursor" Value="Hand"/>
     <Setter Property="Template">
 <Setter.Value>
  <ControlTemplate TargetType="Button">
       <Border Background="{TemplateBinding Background}" 
        CornerRadius="8"
     Padding="{TemplateBinding Padding}">
  <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
     </Border>
   <ControlTemplate.Triggers>
     <Trigger Property="IsMouseOver" Value="True">
   <Setter Property="Background" Value="#4a4a62"/>
      </Trigger>
     <Trigger Property="IsPressed" Value="True">
  <Setter Property="Background" Value="#2a2a42"/>
      </Trigger>
   </ControlTemplate.Triggers>
       </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <Grid>
    <!-- Main Container with Border -->
        <Border Background="#0f0f1e" CornerRadius="20">
       <Grid>
                <!-- Top Gradient Background -->
      <Rectangle Fill="#1a1a2e" Opacity="0.5"/>
                
                <!-- Main Content -->
  <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center" Width="500">
                  
       <!-- Logo Section -->
    <StackPanel Orientation="Vertical" Margin="0,0,0,50" HorizontalAlignment="Center">
    <TextBlock Text="🎓" FontSize="64" TextAlignment="Center" Margin="0,0,0,15"/>
          <TextBlock Text="Quiz Platform" 
        FontSize="48" 
         FontWeight="Bold" 
  Foreground="#8b3dff" 
           TextAlignment="Center"
 Margin="0,0,0,5"/>
 </StackPanel>
     
                <!-- Subtitle -->
         <TextBlock Text="Select Your Role" 
     FontSize="32" 
      FontWeight="Bold" 
            Foreground="#ffffff" 
   TextAlignment="Center" 
            Margin="0,0,0,40"/>
    
          <!-- Role Selection Label -->
        <TextBlock Text="I am a..." 
         FontSize="14" 
        Foreground="#b0b0c8" 
        Margin="0,0,0,12"
        FontWeight="SemiBold"/>
      
       <!-- ComboBox Container with Shadow Effect -->
 <Border CornerRadius="10" 
      Background="#2d2d44" 
    Padding="3"
    Margin="0,0,0,30"
    BorderThickness="2"
       BorderBrush="#8b3dff">
      <ComboBox x:Name="RoleComboBox" 
   Height="50" 
    Background="#2d2d44" 
       Foreground="White" 
   FontSize="15"
       Padding="15,12"
   BorderThickness="0"
    Style="{StaticResource ComboBoxStyle}">
  <ComboBoxItem Content="👤  Student" Tag="Student" IsSelected="True"/>
        <ComboBoxItem Content="👨‍🏫  Lecturer" Tag="Lecturer"/>
  <ComboBoxItem Content="⚙️  Administrator" Tag="Admin"/>
      </ComboBox>
     </Border>
    
      <!-- Description -->
          <Border CornerRadius="8" 
   Background="#1a1a2e" 
    Padding="20,15"
 Margin="0,0,0,40"
    BorderThickness="1"
         BorderBrush="#3a3a52">
        <TextBlock x:Name="RoleDescriptionBlock" 
      Text="Login to access quizzes, view results, and compete on leaderboards." 
           FontSize="14" 
  Foreground="#b0b0c8" 
       TextAlignment="Left" 
      TextWrapping="Wrap"
 LineHeight="22"/>
      </Border>
           
      <!-- Buttons -->
    <StackPanel Orientation="Horizontal" 
    HorizontalAlignment="Center" 
     Margin="0,0,0,0"
   Height="50">
              <Button Content="Cancel" 
          Click="CancelButton_Click" 
 Width="160" 
       Height="50"
       Style="{StaticResource CancelButton}"
    Margin="0,0,15,0"/>
        
      <Button Content="Continue →" 
        Click="ContinueButton_Click" 
       Width="160" 
     Height="50"
               Style="{StaticResource ModernButton}"
  Margin="15,0,0,0"/>
 </StackPanel>
        
</StackPanel>
    </Grid>
     </Border>
    </Grid>
</Window>
